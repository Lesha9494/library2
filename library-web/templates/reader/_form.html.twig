{{ form_start(form) }}
<div class="form-container">

	<div class="form-field">
		<label class="form-label">ФИО читателя:</label>
		{{ form_widget(form.fullName, {'attr': {'class': 'form-control'}}) }}
	</div>

	<div class="form-field">
		<label class="form-label">Номер читательского билета:</label>
		{{ form_widget(form.ticketNumber, {'attr': {'class': 'form-control'}}) }}
	</div>

	<div class="form-field">
		<label class="form-label">Контактная информация:</label>
		{{ form_widget(form.contacts, {'attr': {'class': 'form-control'}}) }}
	</div>

	<div class="form-field">
		<label class="form-label">Email:</label>
		{{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
	</div>

	<div class="form-field">
		<label class="form-label">Пароль:</label>
		{{ form_widget(form.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Оставьте пустым для сохранения текущего'}}) }}
		<small style="color: #666; font-size: 12px; display: block; margin-top: 5px;"></small>
	</div>

	<div class="form-field">
		<label class="form-label">Роли:</label>
		<div class="roles-container">
			{{ form_widget(form.roles, {'attr': {'class': 'roles-select'}}) }}
		</div>
	</div>

	<div class="form-actions">
		<button type="submit" class="btn-primary">{{ button_label|default('Сохранить') }}</button>
		<a href="/reader" class="btn-secondary">Отмена</a>
	</div>

</div>
{{ form_end(form, {'render_rest': false}) }}

<style>
	.form-container {
		max-width: 500px;
		margin: 0 auto;
		padding: 20px;
		background: white;
		border-radius: 5px;
		box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
	}

	.form-field {
		margin-bottom: 20px;
	}

	.form-label {
		display: block;
		margin-bottom: 8px;
		font-weight: bold;
		color: #333;
	}

	.form-control {
		width: 100%;
		padding: 10px;
		border: 1px solid #ddd;
		border-radius: 4px;
		box-sizing: border-box;
		font-size: 14px;
		font-family: Arial, sans-serif;
	}

	.form-control:focus {
		outline: none;
		border-color: #4CAF50;
	}

	.roles-container {
		background: #f9f9f9;
		padding: 15px;
		border-radius: 4px;
		border: 1px solid #ddd;
	}

	.roles-select {
		width: 100%;
		padding: 10px;
		border: 1px solid #ccc;
		border-radius: 4px;
		background: white;
		font-size: 14px;
		font-family: Arial, sans-serif;
	}

	.roles-select option {
		padding: 8px;
		margin: 2px 0;
		border-radius: 3px;
	}

	.roles-select option:hover {
		background: #f0f0f0;
	}

	.roles-select option:checked {
		background: #4CAF50;
		color: white;
	}

	.form-actions {
		display: flex;
		gap: 10px;
		margin-top: 30px;
		padding-top: 20px;
		border-top: 1px solid #eee;
	}

	.btn-primary {
		background: #4CAF50;
		color: white;
		padding: 10px 20px;
		border: none;
		border-radius: 4px;
		cursor: pointer;
		font-size: 16px;
		flex: 1;
	}

	.btn-primary:hover {
		background: #45a049;
	}

	.btn-secondary {
		background: #f44336;
		color: white;
		padding: 10px 20px;
		border-radius: 4px;
		text-decoration: none;
		text-align: center;
		font-size: 16px;
		flex: 1;
	}

	.btn-secondary:hover {
		background: #d32f2f;
	}
</style>
