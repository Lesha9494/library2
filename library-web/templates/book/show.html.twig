{% extends 'base.html.twig' %}

{% block title %}Книга:
	{{ book.title }}
{% endblock %}

{% block body %}
	<div class="container">
		<div class="book-header">
			<h1>{{ book.title }}</h1>
			<div class="actions">
				<a href="{{ path('app_book_edit', {'id': book.id}) }}" class="btn-edit">Изменить</a>
				{{ include('book/_delete_form.html.twig') }}
			</div>
		</div>

		<div class="book-info">
			<div class="info-row">
				<span class="label">ISBN:</span>
				<span class="value">
					<code>{{ book.isbn }}</code>
				</span>
			</div>

			<div class="info-row">
				<span class="label">Год издания:</span>
				<span class="value">{{ book.year }}</span>
			</div>

			<div class="info-row">
				<span class="label">Количество экземпляров:</span>
				<span class="value">{{ book.copies }}</span>
			</div>

			<div class="info-row">
				<span class="label">Автор:</span>
				<span class="value">
					{% if book.author %}
						<a href="{{ path('app_author_show', {'id': book.author.id}) }}">
							{{ book.author.fullName }}
						</a>
					{% else %}
						Не указан
					{% endif %}
				</span>
			</div>
		</div>

		<div style="margin-top: 30px;">
			<a href="{{ path('app_book_index') }}" class="back-link">← Назад к списку книг</a>
		</div>
	</div>

	<style>
		.container {
			max-width: 800px;
			margin: 0 auto;
			padding: 20px;
		}

		.book-header {
			display: flex;
			justify-content: space-between;
			align-items: center;
			margin-bottom: 30px;
			border-bottom: 2px solid #eee;
			padding-bottom: 15px;
		}

		h1 {
			color: #333;
			margin: 0;
		}

		.actions {
			display: flex;
			gap: 10px;
		}

		.btn-edit {
			background: #FF9800;
			color: white;
			padding: 8px 15px;
			border-radius: 4px;
			text-decoration: none;
		}

		.btn-edit:hover {
			background: #F57C00;
		}

		.btn-delete {
			background: #f44336;
			color: white;
			padding: 8px 15px;
			border: none;
			border-radius: 4px;
			cursor: pointer;
		}

		.btn-delete:hover {
			background: #d32f2f;
		}

		.book-info {
			background: #f9f9f9;
			padding: 20px;
			border-radius: 5px;
		}

		.info-row {
			display: flex;
			margin-bottom: 15px;
			padding-bottom: 15px;
			border-bottom: 1px solid #eee;
		}

		.info-row:last-child {
			border-bottom: none;
			margin-bottom: 0;
		}

		.label {
			width: 200px;
			font-weight: bold;
			color: #555;
		}

		.value {
			flex: 1;
		}

		.back-link {
			color: #2196F3;
			text-decoration: none;
		}

		.back-link:hover {
			text-decoration: underline;
		}
	</style>
{% endblock %}
